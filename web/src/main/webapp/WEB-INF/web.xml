<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>veilarbportefolje</display-name>
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>veilarbportefolje_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!--IKKE BENYTT RESTEASY-->
    <context-param>
        <param-name>resteasy.scan</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.scan.providers</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.scan.resources</param-name>
        <param-value>false</param-value>
    </context-param>

    <!--CONFIG FOR API-APP-->
    <context-param>
        <param-name>springContekstKlasse</param-name>
        <param-value>no.nav.fo.config.ApplicationConfig</param-value>
    </context-param>
    <listener>
        <listener-class>no.nav.apiapp.ApiAppServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>reindekserytelser</servlet-name>
        <servlet-class>no.nav.fo.filmottak.ytelser.YtelserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reindekserytelser</servlet-name>
        <url-pattern>/internal/reindekserytelser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>oppdatertiltak</servlet-name>
        <servlet-class>no.nav.fo.filmottak.tiltak.TiltakServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>oppdatertiltak</servlet-name>
        <url-pattern>/internal/oppdatertiltak</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>totalhovedindeksering</servlet-name>
        <servlet-class>no.nav.fo.internal.TotalHovedindekseringServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>totalhovedindeksering</servlet-name>
        <url-pattern>/internal/totalhovedindeksering</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>restservlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>
                no.nav.fo.provider.rest,
                no.nav.fo.feed.controller
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>restservlet</servlet-name>
        <url-pattern>/tjenester/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Ubeskyttet</web-resource-name>
            <url-pattern>/tjenester/login</url-pattern>
            <url-pattern>/tjenester/solr/*</url-pattern>
            <url-pattern>/internal/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Alt annet beskyttet</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!-- From Servlet spec 3.1 "**" means any authenticated user
            ref: https://community.oracle.com/blogs/swchan2/2013/04/19/role-servlet-31-security-constraint -->
            <role-name>**</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
